# Define which database to use: hsql-memory, hsql-file, mysql
system.property.db.mode=mysql

# Define the address and port used to connect to DATAMEER.
system.property.server.address=$(hostname -i):8088

# Set if DATAMEER should send e-mail notifications.
# Set to "true" to enable, and set to "false" to disable.
mail.enabled=true

# Define the directory where DATAMEER stores persistent data:
localfs.root=das-data
localfs.cache.root=cache
system.property.local-execution.temp-dir=${localfs.cache.root}/local-execution

